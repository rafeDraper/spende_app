<div class="row clearfix">
  <% if meetings_item.completed? %>
    <div class="complete">
      <%= link_to  "Mark as Complete", complete_meetings_list_meetings_item_path(@meetings_list, meetings_item.id), method: :patch %>
    </div>
    <div class="meetings_item">
      <p style="opacity: 0,4;">
        <strike>
        <%= meetings_item.date %>
        <%= meetings_item.amount %>
      </strike>
    </p>
    </div>
    <div class="trash">
      <%= link_to 'Delete', meetings_list_meetings_item_path(@meetings_list, meetings_item),
      method: :delete, data: { confirm: "Are you sure?" }  %>
    </div>
    <% else %>
    <div class="compelte">
        <%= link_to  "Mark as Complete", complete_meetings_list_meetings_item_path(@meetings_list, meetings_item.id), method: :patch %>
      </div>
      <div class="meetings_item">
        <p>
          <%= meetings_item.date %>
          <%= meetings_item.amount %>
        </p>
      </div>
      <div class="trash">
        <%= link_to 'Delete', meetings_list_meetings_item_path(@meetings_list, meetings_item),
        method: :delete, data: { confirm: "Are you sure?" }  %>
      </div>
    <% end %>

</div>